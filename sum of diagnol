#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
     int n,i,sum1=0,sum2=0,j;
    scanf("%d",&n);
    int stu[n][n];
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            scanf("%d",&stu[i][j]);
        }
    }
    for(i=0;i<n;i++){
        sum1=sum1+stu[i][i];
    }
    for(i=0;i<n;i++){
        sum2=sum2+stu[i][n-i-1];
    }
    printf("Sum of Primary Diagonal: %d\n",sum1);
    printf("Sum of Secondary Diagonal: %d\n",sum2);
    if(n%2!=0){
         printf("Total Sum of Both Diagonals: %d",sum1+sum2-stu[n/2][n/2]);
    }
   else{
        printf("Total Sum of Both Diagonals: %d",sum1+sum2);
    }
   
    return 0;
}
