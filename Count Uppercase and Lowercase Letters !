#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char str[10001];
    int upper=0;int lower=0;
    fgets(str,sizeof(str),stdin);
    for(int i=0;str[i]!='\0';i++){
        if(isupper(str[i])){
            upper++;
        }
        else if (islower(str[i])) {
            lower++;
        }
    }

    printf("%d %d\n", upper, lower);
    
    return 0;
}
