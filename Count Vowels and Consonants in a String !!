#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include<ctype.h>
int main() {
     int count = 0, conso = 0;
char name[1000];
   fgets(name, sizeof(name), stdin);
    for(int i=0;name[i]!='\0'; ++i){
        if (isalpha(name[i])){
            name[i] = tolower(name[i]);
            if (name[i] == 'a' || name[i] == 'e' || name[i] == 'i' || name[i] == 'o' || name[i] == 'u' ){
                count++;
            }
            else conso++;
        }
    }
    printf ("%d %d", count, conso);
 
    return 0;
}
