#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
     int n,i;
    scanf("%d",&n);
    int stu[n];
    int count=0;
    int count1=0;
    for(i=0;i<n;i++){
    scanf("%d",&stu[i]);
    }
    for(i=0;i<n;i++){
        if(stu[i]%2==0){
            count++;
        }else{
            count1++;
        }
    }
            printf("%d %d\n",count,count1);
    return 0;
}
