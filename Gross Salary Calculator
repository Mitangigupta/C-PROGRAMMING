#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int B;
    float hra,da,gross;
    scanf("%d",&B);
    scanf("%f%f",&hra,&da);
    if (B<=10000){
        hra=0.2*B;
        da=0.3*B;
    }else if(B<=20000){
        hra=(0.25*B);
        da=(0.4*B);
    }
     else{
         hra=(0.3*B);
         da=(0.5*B);
    }
    gross=B+hra+da;
     printf("%.2f\n",gross);
    return 0;
}
