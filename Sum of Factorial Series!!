#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
    int isfact(int num){
        int fact=1,i;
        for(i=1;i<=num;i++){
        fact=fact*i;
    }
     return fact;
  }
    int main() {
        int n;
        scanf("%d",&n);
        int sum = 0;
        for(int i=1;i<=n;i++){
        sum=sum+isfact(i);
    }
    printf("%d",sum);
    return 0;
}
