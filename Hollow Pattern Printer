#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int i,n,t,j;  
    scanf("%d%d",&n,&t);
    for(i=1;i<= n;i++){
        for(j=1;j<=t; ++j){
            if(i==1 || i==n || j==1 || j==t){
            printf("* ");
            }else{
                 printf("  ");
            }
        }  
        printf("\n");
    }
    return 0;
}
